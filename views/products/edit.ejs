<% layout('layouts/boilerplate') %>

<div class="row" style="margin-bottom: 100px">
    <h1 class="text-center">Edit Product</h1>
    <div class="col-6 offset-3">
        <form action="/products/<%= product._id %>?_method=PUT" method="POST" novalidate class="validated-form">

            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="product[title]" value="<%= product.title %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <input class="form-control" type="text" id="price" name="product[price]" value="<%= product.price %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" name="product[description]" required><%= product.description %></textarea>
            </div>

            <div class="mb-3">
                <% product.images.forEach(function(img, i) { %>

                <img crossorigin="anonymous" class="img-thumbnail" src="<%= img.url %>" alt="">

                <div>
                    <input value="<%= img.filename %>" name="deleteImages[]" type="checkbox" id="image-<%= i %>">
                    <label style="margin-bottom: 50px" for="image-<%= i %>">Delete?</label>
                </div>
                
                <% }) %>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Update Product</button>
            </div>
            
        </form>

        <a class="btn btn-danger" href="/products/<%= product._id %>">Cancel</a>

    </div>
</div>